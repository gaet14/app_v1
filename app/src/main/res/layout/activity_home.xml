<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Home">

    <ImageView
        android:id="@+id/eseoLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/eseo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/networkCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commander via internet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scanBleDevices"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/scanBleDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanner les périphériques"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>